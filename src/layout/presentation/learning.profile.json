{
    "id": "learning",
    "visualPreset": "spacious",
    "description": "Reading / teaching / progression experience",
    "defaults": {
      "container": "page",
      "maxWidth": "800px",
      "navigation": "hidden",
      "readingFlow": "vertical"
    },
    "sections": {
      "header": {
        "type": "row",
        "params": { "gap": "1rem", "justify": "space-between", "align": "center", "wrap": "wrap" }
      },
      "content": {
        "type": "column",
        "params": { "gap": "2rem" }
      },
      "lesson": {
        "type": "column",
        "params": { "gap": "2rem" }
      },
      "examples": {
        "type": "stack",
        "params": {}
      },
      "actions": {
        "type": "row",
        "params": { "gap": "0.75rem", "align": "center" }
      },
      "footer": {
        "type": "column",
        "params": { "align": "center" }
      }
    }
  }
  