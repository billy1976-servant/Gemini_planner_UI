{
    "id": "app",
    "description": "Task-focused application experience",
    "defaults": {
      "container": "page",
      "maxWidth": "100%",
      "navigation": "side",
      "readingFlow": "horizontal"
    },
    "sections": {
      "nav": {
        "type": "column",
        "params": { "gap": "0.75rem", "width": "280px" }
      },
      "header": {
        "type": "row",
        "params": { "gap": "1rem", "justify": "space-between", "align": "center" }
      },
      "primary": {
        "type": "row",
        "params": { "gap": "1rem" }
      },
      "sidebar": {
        "type": "column",
        "params": { "gap": "1rem", "width": "320px" }
      },
      "secondary": {
        "type": "column",
        "params": { "width": "320px" }
      },
      "content": {
        "type": "stack",
        "params": {}
      },
      "actions": {
        "type": "row",
        "params": { "gap": "0.75rem", "align": "center" }
      },
      "footer": {
        "type": "column",
        "params": { "align": "center" }
      }
    }
  }
  