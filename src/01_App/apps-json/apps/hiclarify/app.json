{
  "id": "screenRoot",
  "type": "screen",
  "defaultSectionLayoutId": "content-stack",
  "state": {
    "currentView": "me"
  },
  "children": [
    {
      "id": "|TabNavigation",
      "type": "Stepper",
      "params": {
        "moleculeLayout": {
          "type": "row",
          "preset": "distributed"
        }
      },
      "content": {
        "steps": [
          {
            "content": {
              "label": "Me"
            },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:currentView",
                "value": "me"
              }
            }
          },
          {
            "content": {
              "label": "Others"
            },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:currentView",
                "value": "others"
              }
            }
          },
          {
            "content": {
              "label": "▶"
            },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "media.play"
              }
            },
            "params": {
              "surface": {
                "background": "color.secondary",
                "radius": "radius.pill"
              },
              "text": {
                "color": "color.onPrimary",
                "weight": "textWeight.bold",
                "size": "textSize.lg"
              }
            }
          },
          {
            "content": {
              "label": "Plan"
            },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:currentView",
                "value": "plan"
              }
            }
          },
          {
            "content": {
              "label": "Journey"
            },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:currentView",
                "value": "journey"
              }
            }
          }
        ]
      }
    },
    {
      "id": "|MeSection",
      "type": "Section",
      "when": {
        "state": "currentView",
        "equals": "me"
      },
      "content": {
        "title": "My Life"
      },
      "layout": "content-stack",
      "children": [
        {
          "type": "Card",
          "content": {
            "title": "Daily Habits",
            "body": "Track your personal growth and daily routines."
          }
        },
        {
          "type": "Card",
          "content": {
            "title": "Morning Routine",
            "body": "Start your day with intention and purpose."
          }
        },
        {
          "type": "Card",
          "content": {
            "title": "Evening Reflection",
            "body": "Review your day and prepare for tomorrow."
          }
        }
      ]
    },
    {
      "id": "|OthersSection",
      "type": "Section",
      "when": {
        "state": "currentView",
        "equals": "others"
      },
      "content": {
        "title": "Relationship Manager"
      },
      "layout": "content-stack",
      "children": [
        {
          "type": "Card",
          "content": {
            "title": "By Category",
            "body": "View relationships organized by type and category."
          }
        },
        {
          "type": "List",
          "content": {
            "items": [
              {
                "content": {
                  "label": "Family"
                },
                "behavior": {
                  "type": "Action",
                  "params": {
                    "name": "navigate.category",
                    "value": "family"
                  }
                }
              },
              {
                "content": {
                  "label": "Friends"
                },
                "behavior": {
                  "type": "Action",
                  "params": {
                    "name": "navigate.category",
                    "value": "friends"
                  }
                }
              },
              {
                "content": {
                  "label": "Colleagues"
                },
                "behavior": {
                  "type": "Action",
                  "params": {
                    "name": "navigate.category",
                    "value": "colleagues"
                  }
                }
              }
            ]
          }
        }
      ]
    },
    {
      "id": "|PlanSection",
      "type": "Section",
      "when": {
        "state": "currentView",
        "equals": "plan"
      },
      "content": {
        "title": "Journey Builder"
      },
      "layout": "content-stack",
      "children": [
        {
          "type": "Card",
          "content": {
            "title": "Stats",
            "body": "Today: 0 | Week: 0 | Month: 0",
            "bodyFromState": "structure.stats"
          }
        },
        {
          "type": "Toolbar",
          "content": {
            "actions": [
              {
                "content": { "label": "Today" },
                "behavior": { "type": "Action", "params": { "name": "calendar.today" } }
              },
              {
                "content": { "label": "Week" },
                "behavior": { "type": "Action", "params": { "name": "calendar.week" } }
              },
              {
                "content": { "label": "Month" },
                "behavior": { "type": "Action", "params": { "name": "calendar.month" } }
              }
            ]
          }
        },
        {
          "type": "Card",
          "content": {
            "title": "Add task from text",
            "body": "Type one or more tasks (e.g. Buy milk tomorrow, Call John every Thursday) then click Add."
          }
        },
        {
          "type": "Field",
          "params": {
            "field": {
              "fieldKey": "structure_draftText",
              "multiline": true
            }
          },
          "content": {
            "placeholder": "e.g. Run to the bank Thursday, take out trash every Thursday"
          }
        },
        {
          "type": "Button",
          "content": { "label": "Add from text" },
          "behavior": { "type": "Action", "params": { "name": "structure:addFromText" } }
        },
        {
          "type": "Section",
          "when": { "state": "values.structure.calendarView", "equals": "day" },
          "content": { "title": "Day" },
          "layout": "content-stack",
          "children": [
            {
              "type": "List",
              "content": {
                "scheduledFromState": "structure",
                "scheduledFromStateDateKey": "structure.selectedDate"
              }
            },
            {
              "type": "List",
              "content": {
                "blocksFromState": "structure.blocksByDate",
                "blocksFromStateDateKey": "structure.selectedDate"
              }
            }
          ]
        },
        {
          "type": "Section",
          "when": { "state": "values.structure.calendarView", "equals": "week" },
          "content": { "title": "Week" },
          "layout": "content-stack",
          "children": [
            {
              "type": "Card",
              "content": { "title": "Day 1" }
            },
            {
              "type": "List",
              "content": {
                "blocksFromState": "structure.blocksByDate",
                "blocksFromStateDateKey": "structure.weekDates.0"
              }
            },
            {
              "type": "List",
              "content": {
                "scheduledFromState": "structure",
                "scheduledFromStateDateKey": "structure.weekDates.0"
              }
            },
            {
              "type": "Card",
              "content": { "title": "Day 2" }
            },
            {
              "type": "List",
              "content": {
                "blocksFromState": "structure.blocksByDate",
                "blocksFromStateDateKey": "structure.weekDates.1"
              }
            },
            {
              "type": "List",
              "content": {
                "scheduledFromState": "structure",
                "scheduledFromStateDateKey": "structure.weekDates.1"
              }
            },
            {
              "type": "Card",
              "content": { "title": "Day 3" }
            },
            {
              "type": "List",
              "content": {
                "blocksFromState": "structure.blocksByDate",
                "blocksFromStateDateKey": "structure.weekDates.2"
              }
            },
            {
              "type": "List",
              "content": {
                "scheduledFromState": "structure",
                "scheduledFromStateDateKey": "structure.weekDates.2"
              }
            },
            {
              "type": "Card",
              "content": { "title": "Day 4" }
            },
            {
              "type": "List",
              "content": {
                "blocksFromState": "structure.blocksByDate",
                "blocksFromStateDateKey": "structure.weekDates.3"
              }
            },
            {
              "type": "List",
              "content": {
                "scheduledFromState": "structure",
                "scheduledFromStateDateKey": "structure.weekDates.3"
              }
            },
            {
              "type": "Card",
              "content": { "title": "Day 5" }
            },
            {
              "type": "List",
              "content": {
                "blocksFromState": "structure.blocksByDate",
                "blocksFromStateDateKey": "structure.weekDates.4"
              }
            },
            {
              "type": "List",
              "content": {
                "scheduledFromState": "structure",
                "scheduledFromStateDateKey": "structure.weekDates.4"
              }
            },
            {
              "type": "Card",
              "content": { "title": "Day 6" }
            },
            {
              "type": "List",
              "content": {
                "blocksFromState": "structure.blocksByDate",
                "blocksFromStateDateKey": "structure.weekDates.5"
              }
            },
            {
              "type": "List",
              "content": {
                "scheduledFromState": "structure",
                "scheduledFromStateDateKey": "structure.weekDates.5"
              }
            },
            {
              "type": "Card",
              "content": { "title": "Day 7" }
            },
            {
              "type": "List",
              "content": {
                "blocksFromState": "structure.blocksByDate",
                "blocksFromStateDateKey": "structure.weekDates.6"
              }
            },
            {
              "type": "List",
              "content": {
                "scheduledFromState": "structure",
                "scheduledFromStateDateKey": "structure.weekDates.6"
              }
            }
          ]
        },
        {
          "type": "Section",
          "when": { "state": "values.structure.calendarView", "equals": "month" },
          "content": { "title": "Month" },
          "layout": "content-stack",
          "children": [
            {
              "type": "List",
              "content": {
                "cellsFromState": "structure.monthRollup"
              }
            }
          ]
        },
        {
          "type": "List",
          "content": {
            "itemsFromState": "structure.items"
          }
        },
        {
          "type": "Card",
          "content": {
            "title": "Calendar View",
            "body": "Plan your days, weeks, and months ahead."
          }
        },
        {
          "type": "Card",
          "content": {
            "title": "Upcoming Events",
            "body": "See what's coming up in your schedule."
          }
        }
      ]
    },
    {
      "id": "|JourneySection",
      "type": "Section",
      "when": {
        "state": "currentView",
        "equals": "journey"
      },
      "content": {
        "title": "My Journey"
      },
      "layout": "content-stack",
      "children": [
        {
          "type": "Card",
          "content": {
            "title": "Recent Activities",
            "body": "Review your recent progress and milestones."
          }
        },
        {
          "type": "Card",
          "content": {
            "title": "Goals & Achievements",
            "body": "Track your long-term goals and celebrate wins."
          }
        },
        {
          "type": "Card",
          "content": {
            "title": "Reflections",
            "body": "Look back on your journey and insights gained."
          }
        }
      ]
    },
    {
      "id": "|PlaySection",
      "type": "Section",
      "content": {
        "title": "Autopilot Mode"
      },
      "layout": "content-center",
      "children": [
        {
          "type": "Card",
          "content": {
            "title": "Ready to Launch",
            "body": "Autopilot will guide you through your daily routine automatically."
          },
          "params": {
            "surface": {
              "background": "color.primary"
            },
            "title": {
              "color": "color.onPrimary"
            },
            "body": {
              "color": "color.onPrimary"
            }
          }
        },
        {
          "type": "Toolbar",
          "content": {
            "actions": [
              {
                "content": {
                  "label": "▶ Start Autopilot"
                },
                "behavior": {
                  "type": "Action",
                  "params": {
                    "name": "media.play"
                  }
                },
                "params": {
                  "surface": {
                    "background": "color.secondary",
                    "radius": "radius.pill"
                  },
                  "text": {
                    "color": "color.onPrimary",
                    "weight": "textWeight.bold",
                    "size": "textSize.xl"
                  }
                }
              },
              {
                "content": {
                  "label": "⚙ Options"
                },
                "behavior": {
                  "type": "Action",
                  "params": {
                    "name": "media.options"
                  }
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
