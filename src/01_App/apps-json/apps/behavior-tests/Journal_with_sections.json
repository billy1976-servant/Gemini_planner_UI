                "mode": "two-way",
                "key": "journal.think"
              },
              "params": {
                "field": {
                  "multiline": true,
                  "rows": 4,
                  "fieldKey": "journal.think"
                }
              }
            },
            {
              "type": "button",
              "content": {
                "label": "Save Think Entry"
              },
              "behavior": {
                "type": "Action",
                "params": {
                  "name": "state:journal.add",
                  "track": "think",
                  "key": "entry",
                  "valueFrom": "input",
                  "fieldKey": "journal.think"
                }
              }
            },
            {
              "type": "UserInputViewer",
              "params": {
