{
  "id": "organ:header:shrink-on-scroll",
  "type": "Section",
  "role": "header",
  "layout": {
    "type": "row",
    "params": {
      "gap": "1rem",
      "justify": "space-between",
      "align": "center",
      "wrap": "wrap"
    }
  },
  "params": {
    "sticky": true,
    "scrollBehavior": "shrink"
  },
  "children": [
    { "type": "slot", "slotKey": "header.logo" },
    { "type": "slot", "slotKey": "header.nav" },
    { "type": "slot", "slotKey": "header.cta" }
  ]
}
