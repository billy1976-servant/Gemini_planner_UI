{
  "variants": {
    "plain": {
      "collection": {
        "direction": "column",
        "gap": "gap.sm",
        "padding": "padding.none",
        "scrollable": false
      },
      "surface": {
        "background": "color.surface",
        "radius": "radius.none",
        "padding": "padding.sm",
