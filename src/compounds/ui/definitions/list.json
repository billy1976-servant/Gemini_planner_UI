      },
      "surface": {
        "background": "color.surface",
        "radius": "radius.md",
        "padding": "padding.md",
        "borderColor": "color.outline",
        "borderWidth": "borderWidth.sm"
      },
      "layout": {
        "gap": "gap.md"
