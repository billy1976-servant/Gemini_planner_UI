{
  "id": "navigation",
  "type": "molecule",
  "category": "navigation",
  "description": "Full navigation system with logo, links, dropdowns, mobile nav, and CTA",
  "slots": {
    "logo": {
      "type": "object",
      "description": "Logo image and link"
    },
    "links": {
      "type": "array",
      "description": "Navigation links with optional dropdowns"
    },
    "cta": {
      "type": "object",
      "description": "Call-to-action button"
    }
  },
  "variants": {
    "default": {
      "surface": {
        "background": "color.surface",
        "shadow": "elevation.1",
        "padding": "1rem 2rem"
      },
      "logo": {
        "size": "textRole.title.size",
        "weight": "textRole.title.weight",
        "color": "color.onSurface"
      },
      "link": {
        "size": "textRole.body.size",
        "weight": "400",
        "color": "color.onSurface"
      },
      "activeLink": {
        "size": "textRole.body.size",
        "weight": "600",
        "color": "color.primary"
      },
      "cta": {
        "background": "color.primary",
        "color": "color.onPrimary",
        "padding": "0.75rem 1.5rem",
        "radius": "radius.md"
      },
      "dropdown": {
        "background": "color.surface",
        "shadow": "elevation.2",
        "padding": "1rem",
        "radius": "radius.md"
      },
      "mobileNav": {
        "background": "color.surface",
        "shadow": "elevation.3"
      }
    },
    "transparent": {
      "surface": {
        "background": "transparent",
        "shadow": "none",
        "padding": "1rem 2rem"
      },
      "logo": {
        "color": "color.onPrimary"
      },
      "link": {
        "color": "color.onPrimary"
      },
      "activeLink": {
        "color": "color.onPrimary",
        "weight": "600"
      }
    }
  },
  "sizes": {
    "sm": {
      "surface": {
        "padding": "0.5rem 1rem"
      },
      "link": {
        "size": "0.875rem"
      }
    },
    "md": {
      "surface": {
        "padding": "1rem 2rem"
      }
    },
    "lg": {
      "surface": {
        "padding": "1.5rem 3rem"
      },
      "link": {
        "size": "1.125rem"
      }
    }
  }
}
