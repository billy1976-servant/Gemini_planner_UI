{
  "id": "footer",
  "type": "molecule",
  "category": "layout",
  "description": "Multi-column footer with link groups, social icons, newsletter, and copyright",
  "slots": {
    "columns": {
      "type": "array",
      "description": "Footer columns with links and social icons"
    },
    "newsletter": {
      "type": "object",
      "description": "Newsletter subscription area"
    },
    "copyright": {
      "type": "string",
      "description": "Copyright text"
    }
  },
  "variants": {
    "default": {
      "surface": {
        "background": "color.surfaceVariant",
        "padding": "4rem 2rem 2rem"
      },
      "columnTitle": {
        "size": "textRole.title.size",
        "weight": "textRole.title.weight",
        "color": "color.onSurface",
        "marginBottom": "1rem"
      },
      "link": {
        "size": "textRole.body.size",
        "weight": "400",
        "color": "color.onSurfaceVariant"
      },
      "social": {
        "size": "1.5rem",
        "color": "color.onSurface"
      },
      "newsletter": {
        "background": "color.primary",
        "color": "color.onPrimary",
        "padding": "0.75rem 1.5rem",
        "radius": "radius.md"
      },
      "copyright": {
        "size": "0.875rem",
        "color": "color.onSurfaceVariant",
        "textAlign": "center"
      }
    }
  }
}
