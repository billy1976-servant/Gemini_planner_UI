      "primary": "#D81B60",
      "primaryVariant": "#AD1457",
      "onPrimary": "#FFFFFF",
      "onSurface": "#1A1218",
      "outline": "#F06292",
      "secondary": "#6A1B9A",
      "error": "#C2185B",
      "errorContainer": "#FFCDD2",
      "onErrorContainer": "#5D0000"
    },
  
  
    "radius": {
      "none": 0,
      "sm": 8,
      "md": 12,
      "lg": 18,
      "xl": 24
    },
  
  
    "padding": {
      "none": 0,
      "xs": 6,
      "sm": 12,
      "md": 20,
      "lg": 32,
      "xl": 48,
      "2xl": 72,
      "3xl": 112
