{
  "id": "test-minimal-screen",
  "type": "json-skin",
  "state": {
    "currentView": "calculator-view"
  },
  "flow": "test-flow",
  "root": {
    "type": "json-skin",
    "children": [
      {
        "type": "section",
        "id": "calculator-section",
        "when": {
          "state": "currentView",
          "equals": "calculator-view"
        },
        "children": [
          {
            "type": "text",
            "content": {
              "text": "Monthly Labor Cost Calculator"
            }
          },
          {
            "type": "field",
            "id": "hours-field",
            "params": {
              "label": "Hours per day",
              "placeholder": "Enter hours",
              "inputType": "number"
            },
            "state": {
              "key": "calculatorInput.hours"
            }
          },
          {
            "type": "field",
            "id": "wage-field",
            "params": {
              "label": "Hourly wage",
              "placeholder": "Enter wage",
              "inputType": "number"
            },
            "state": {
              "key": "calculatorInput.hourlyWage"
            }
          },
          {
            "type": "button",
            "id": "calculate-button",
            "content": {
              "label": "Calculate"
            },
            "behavior": {
              "type": "Action",
              "params": {
                "action": "logic:runCalculator",
                "calculatorId": "cleanup_labor_monthly",
                "inputKey": "calculatorInput",
                "outputKey": "calculatorResult"
              }
            }
          },
          {
            "type": "UserInputViewer",
            "params": {
              "stateKey": "calculatorResult"
            }
          }
        ]
      }
    ]
  }
}
