{
    "id": "screenRoot",
    "type": "screen",
    "children": [
      {
        "type": "text",
        "content": { "label": "VERB PIPELINE PROOF" }
      },
      {
        "type": "card",
        "content": {
          "body": "Type text, click the button, and watch it persist and render below. This proves: click → verb → state → render."
        }
      },
  
  
      {
        "id": "testInput",
        "type": "field",
        "state": {
          "mode": "two-way",
          "key": "journal.test"
        },
        "params": {
          "field": {
            "multiline": false,
            "rows": 1,
            "fieldKey": "journal.test"
          }
        }
      },
  
  
      {
        "type": "button",
        "content": { "label": "RUN VERB (state:journal.add)" },
        "behavior": {
          "type": "Action",
          "params": {
            "name": "state:journal.add",
            "track": "test",
            "key": "test",
            "valueFrom": "input",
            "fieldKey": "journal.test"
          }
        }
      },
  
  
      {
        "type": "UserInputViewer",
        "params": {
          "track": "test",
          "stateKey": "journal.test"
        }
      }
    ]
  }
  
  
  