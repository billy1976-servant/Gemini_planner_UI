{
    "id": "screen.card.demo",
    "type": "screen",
    "children": [
      {
        "id": "demoSection",
        "type": "section",
        "content": { "title": "Card + Grid Layout Demo" },
  
  
        "layout": {
          "type": "column",
          "preset": "spacious",
          "params": {
            "align": "stretch",
            "justify": "flex-start"
          }
        },
  
  
        "children": [
          {
            "id": "card.main",
            "type": "card",
            "params": {
              "surface": {
                "background": "surface.default",
                "radius": "radius.md",
                "padding": "lg"
              }
            },
            "children": [
              {
                "id": "cardHeader",
                "type": "section",
                "children": [
                  {
                    "type": "text",
                    "params": { "text": { "size": "text.lg", "weight": "bold", "align": "left" } },
                    "content": { "label": "Card Title" }
                  },
                  {
                    "type": "text",
                    "params": { "text": { "size": "text.md", "align": "left", "wrap": "normal" } },
                    "content": { "label": "This is supporting body text." }
                  }
                ],
                "layout": {
                  "type": "column",
                  "preset": "tight",
                  "params": { "align": "stretch", "justify": "flex-start" }
                }
              },
  
  
              {
                "id": "inputsGrid",
                "type": "section",
                "layout": {
                  "type": "grid",
                  "preset": "twoColumn",
                  "params": {
                    "columns": 2
                  }
                },
                "children": [
                  { "id": "f1", "type": "field", "params": { "field": { "placeholder": "Field 1" } } },
                  { "id": "f2", "type": "field", "params": { "field": { "placeholder": "Field 2" } } },
                  { "id": "f3", "type": "field", "params": { "field": { "placeholder": "Field 3" } } },
                  { "id": "f4", "type": "field", "params": { "field": { "placeholder": "Field 4" } } },
                  { "id": "f5", "type": "field", "params": { "field": { "placeholder": "Field 5" } } },
                  { "id": "f6", "type": "field", "params": { "field": { "placeholder": "Field 6" } } },
                  { "id": "f7", "type": "field", "params": { "field": { "placeholder": "Field 7" } } },
                  { "id": "f8", "type": "field", "params": { "field": { "placeholder": "Field 8" } } }
                ]
              },
  
  
              {
                "id": "submitRow",
                "type": "section",
                "layout": { "type": "row", "preset": "spaced" },
                "children": [
                  { "type": "button", "content": { "label": "Cancel" } },
                  { "type": "button", "content": { "label": "Save" } }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
  
  
  