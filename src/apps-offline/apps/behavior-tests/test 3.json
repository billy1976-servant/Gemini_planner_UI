{
    "id": "screenRoot",
    "type": "screen",
    "state": {
      "currentView": "A"
    },
    "children": [
      {
        "id": "sectionA",
        "type": "section",
        "when": { "state": "currentView", "equals": "A" },
        "content": { "title": "Screen A" },
        "children": [
          {
            "id": "toB",
            "type": "button",
            "content": { "label": "Go to B" },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:currentView",
                "value": "B"
              }
            }
          },
          {
            "id": "toC",
            "type": "button",
            "content": { "label": "Go to C" },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:currentView",
                "value": "C"
              }
            }
          }
        ]
      },
      {
        "id": "sectionB",
        "type": "section",
        "when": { "state": "currentView", "equals": "B" },
        "content": { "title": "Screen B" },
        "children": [
          {
            "id": "backFromB",
            "type": "button",
            "content": { "label": "Back to A" },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:currentView",
                "value": "A"
              }
            }
          }
        ]
      },
      {
        "id": "sectionC",
        "type": "section",
        "when": { "state": "currentView", "equals": "C" },
        "content": { "title": "Screen C" },
        "children": [
          {
            "id": "backFromC",
            "type": "button",
            "content": { "label": "Back to A" },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:currentView",
                "value": "A"
              }
            }
          }
        ]
      }
    ]
  }
  
  
  