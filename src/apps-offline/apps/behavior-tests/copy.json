{
  "id": "screenRoot",
  "type": "screen",
  "state": {
    "currentView": "|home"
  },
  "children": [
    {
      "id": "|home",
      "type": "section",
      "when": {
        "state": "currentView",
        "equals": "|home"
      },
      "content": { "title": "Home Screen" },
      "children": [
        {
          "type": "button",
          "content": { "label": "Go to Screen B" },
          "behavior": {
            "type": "Action",
            "params": { "name": "state:currentView", "value": "|b" }
          }
        }
      ]
    },
    {
      "id": "|b",
      "type": "section",
      "when": {
        "state": "currentView",
        "equals": "|b"
      },
      "content": { "title": "Screen B" },
      "children": [
        {
          "type": "button",
          "content": { "label": "Back to Home" },
          "behavior": {
            "type": "Action",
            "params": { "name": "state:currentView", "value": "|home" }
          }
        }
      ]
    }
  ]
}
