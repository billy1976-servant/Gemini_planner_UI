{
  "id": "screenRoot",
  "type": "screen",
  "state": {
    "currentView": "home"
  },
  "children": [
    {
      "id": "home",
      "type": "section",
      "when": {
        "state": "currentView",
        "equals": "home"
      },
      "content": {
        "title": "Test Home Screen"
      },
      "children": [
        {
          "type": "button",
          "content": {
            "label": "Go to Test Screen"
          },
          "behavior": {
            "type": "Action",
            "params": {
              "name": "state:currentView",
              "value": "test"
            }
          }
        }
      ]
    },
    {
      "id": "test",
      "type": "section",
      "when": {
        "state": "currentView",
        "equals": "test"
      },
      "content": {
        "title": "Test Screen"
      },
      "children": [
        {
          "type": "button",
          "content": {
            "label": "Back to Home"
          },
          "behavior": {
            "type": "Action",
            "params": {
              "name": "state:currentView",
              "value": "home"
            }
          }
        }
      ]
    }
  ]
}
