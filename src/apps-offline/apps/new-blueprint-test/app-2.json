{
    "id": "screenRoot",
    "type": "screen",
    "children": [
      {
        "id": "|home",
        "type": "section",
        "when": { "state": "currentView", "equals": "|home" },
        "children": [
          {
            "id": "|herocard",
            "type": "card",
            "children": [],
            "content": {
              "image": "profile-avatar.png",
              "label": "Your Profile"
            }
          },
          {
            "id": "|start",
            "type": "button",
            "children": [],
            "content": { "label": "Get Started" },
            "behavior": {
              "type": "Action",
              "params": { "name": "state:currentView", "value": "|signup" }
            }
          },
          {
            "id": "|learn",
            "type": "chip",
            "children": [],
            "content": { "label": "Learn More" },
            "behavior": {
              "type": "Action",
              "params": { "name": "state:currentView", "value": "|info" }
            }
          }
        ],
        "content": { "title": "Welcome to Molecule Validation" }
      },
  
  
      {
        "id": "|signup",
        "type": "section",
        "when": { "state": "currentView", "equals": "|signup" },
        "children": [
          { "id": "|email", "type": "field", "children": [], "content": { "label": "Email Address" } },
          { "id": "|password", "type": "field", "children": [], "content": { "label": "Password" } },
          {
            "id": "|submit",
            "type": "button",
            "children": [],
            "content": { "label": "Submit" },
            "behavior": {
              "type": "Action",
              "params": { "name": "state:currentView", "value": "|success" }
            }
          },
          {
            "id": "|back",
            "type": "button",
            "children": [],
            "content": { "label": "Cancel" },
            "behavior": {
              "type": "Action",
              "params": { "name": "state:currentView", "value": "|home" }
            }
          }
        ],
        "content": { "title": "Create Account" }
      },
  
  
      {
        "id": "|info",
        "type": "section",
        "when": { "state": "currentView", "equals": "|info" },
        "children": [
          {
            "id": "|about",
            "type": "card",
            "children": [],
            "content": {
              "title": "About This App",
              "body": "This section explains the purpose and structure of the system."
            }
          },
          {
            "id": "|tools",
            "type": "toolbar",
            "children": [
              {
                "id": "|share",
                "type": "button",
                "children": [],
                "content": { "label": "Share" },
                "behavior": {
                  "type": "Action",
                  "params": { "name": "state:currentView", "value": "|sharesheet" }
                }
              },
              {
                "id": "|close",
                "type": "button",
                "children": [],
                "content": { "label": "Close" },
                "behavior": {
                  "type": "Action",
                  "params": { "name": "state:currentView", "value": "|home" }
                }
              }
            ]
          }
        ],
        "content": { "title": "Information" }
      },
  
  
      {
        "id": "|success",
        "type": "section",
        "when": { "state": "currentView", "equals": "|success" },
        "children": [
          {
            "id": "|successcard",
            "type": "card",
            "children": [],
            "content": {
              "title": "You're All Set",
              "body": "Your information has been submitted successfully."
            }
          },
          {
            "id": "|finish",
            "type": "button",
            "children": [],
            "content": { "label": "Finish" },
            "behavior": {
              "type": "Action",
              "params": { "name": "state:currentView", "value": "|home" }
            }
          }
        ],
        "content": { "title": "Success" }
      },
  
  
      {
        "id": "|details",
        "type": "section",
        "when": { "state": "currentView", "equals": "|details" },
        "children": [
          { "id": "|steps", "type": "stepper", "children": [] },
          {
            "id": "|backinfo",
            "type": "button",
            "children": [],
            "behavior": {
              "type": "Action",
              "params": { "name": "state:currentView", "value": "|info" }
            }
          }
        ]
      },
  
  
      {
        "id": "|sharesheet",
        "type": "modal",
        "when": { "state": "currentView", "equals": "|sharesheet" },
        "children": [
          {
            "id": "|sharenow",
            "type": "button",
            "children": [],
            "behavior": {
              "type": "Action",
              "params": { "name": "state:currentView", "value": "|info" }
            }
          },
          {
            "id": "|dismiss",
            "type": "button",
            "children": [],
            "behavior": {
              "type": "Action",
              "params": { "name": "state:currentView", "value": "|info" }
            }
          }
        ]
      }
    ]
  }
  
  
  