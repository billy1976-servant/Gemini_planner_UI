{
    "id": "screenRoot",
    "type": "screen",
    "children": [
      {
        "id": "|journalTest",
        "type": "section",
        "content": { "title": "Journal Test (Minimal)" },
        "children": [
          {
            "id": "|input",
            "type": "field",
            "state": {
              "mode": "two-way",
              "key": "journal.|test"
            },
            "content": { "label": "Type something" },
            "params": {
              "field": {
                "multiline": false
              }
            }
          },
          {
            "id": "|save",
            "type": "button",
            "content": { "label": "Save Journal Entry" },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:journal.add",
                "section": "test",
                "text": "{{journal.|test}}"
              }
            }
          },
          {
            "id": "|viewer",
            "type": "journalViewer",
            "content": {
              "title": "Saved Entries"
            }
          }
        ]
      }
    ]
  }
  
  