{
    "id": "screenRoot",
    "type": "screen",
    "children": [
      {
        "type": "section",
        "content": { "title": "Journal Test (Minimal)" },
        "children": [
          {
            "id": "|entry",
            "type": "field",
            "state": {
              "mode": "two-way",
              "key": "journal.test"
            },
            "content": { "label": "Type something" }
          },
          {
            "type": "button",
            "content": { "label": "Save Journal Entry" },
            "behavior": {
              "type": "Action",
              "params": {
                "name": "state:journal.add",
                "section": "test",
                "text": "{{journal.test}}"
              }
            }
          },
          {
            "type": "card",
            "content": {
              "title": "Saved Entries",
              "body": "{{journalEntries}}"
            }
          }
        ]
      }
    ]
  }
  
  