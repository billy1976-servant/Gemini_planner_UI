{
    "color": {
      "surface": "#FFFDF7",
      "surfaceVariant": "#FFF3C4",
      "primary": "#F57C00",
      "primaryVariant": "#EF6C00",
      "onPrimary": "#FFFFFF",
      "onSurface": "#1F1F1F",
      "outline": "#FBC02D",
      "secondary": "#039BE5",
      "error": "#E53935",
      "errorContainer": "#FFCDD2",
      "onErrorContainer": "#5D0000"
    },
  
  
    "radius": {
      "none": 0,
      "sm": 6,
      "md": 12,
      "lg": 20,
      "xl": 32
    },
  
  
    "padding": {
      "none": 0,
      "xs": 8,
      "sm": 12,
      "md": 18,
      "lg": 28,
      "xl": 36,
      "2xl": 48
    },


    "gap": {
      "xs": 8,
      "sm": 12,
      "md": 18,
      "lg": 28,
      "xl": 36,
      "2xl": 48
    },


    "textSize": {
      "xs": 15,
      "sm": 18,
      "md": 21,
      "lg": 26,
      "xl": 34
    },


    "textWeight": {
      "regular": 500,
      "medium": 600,
      "bold": 800
    },


    "lineHeight": {
      "tight": 1.25,
      "normal": 1.55,
      "relaxed": 1.75
    },


    "letterSpacing": {
      "tight": -0.1,
      "normal": 0.2,
      "loose": 0.6
    },
  
  
    "shadow": {
      "none": "none",
      "sm": "0px 2px 4px rgba(0,0,0,0.15)",
      "md": "0px 4px 8px rgba(0,0,0,0.2)",
      "lg": "0px 8px 16px rgba(0,0,0,0.25)"
    },
  
  
    "opacity": {
      "full": 1.0,
      "dim": 0.95,
      "low": 0.85
    },
  
  
    "borderWidth": {
      "none": 0,
      "sm": 2,
      "md": 3
    },
  
  
    "size": {
      "xs": 28,
      "sm": 40,
      "md": 56,
      "lg": 72
    },

    "textRole": {
      "display": { "size": "textSize.xl", "weight": "textWeight.bold", "lineHeight": "lineHeight.tight" },
      "headline": { "size": "textSize.lg", "weight": "textWeight.bold", "lineHeight": "lineHeight.tight" },
      "title": { "size": "textSize.md", "weight": "textWeight.medium", "lineHeight": "lineHeight.normal" },
      "body": { "size": "textSize.md", "weight": "textWeight.regular", "lineHeight": "lineHeight.normal" },
      "label": { "size": "textSize.sm", "weight": "textWeight.medium", "lineHeight": "lineHeight.normal" },
      "caption": { "size": "textSize.xs", "weight": "textWeight.regular", "lineHeight": "lineHeight.normal" }
    },

    "surfaceTier": {
      "base": { "background": "color.surface", "shadow": "shadow.none" },
      "raised": { "background": "color.surface", "shadow": "shadow.sm" },
      "overlay": { "background": "color.surface", "shadow": "shadow.md" },
      "floating": { "background": "color.surface", "shadow": "shadow.lg" }
    },

    "elevation": {
      "0": "none",
      "1": "0px 2px 4px rgba(0,0,0,0.15)",
      "2": "0px 4px 8px rgba(0,0,0,0.2)",
      "3": "0px 8px 16px rgba(0,0,0,0.25)",
      "4": "0px 12px 24px rgba(0,0,0,0.3)"
    },

    "prominence": {
      "primary": { "background": "color.primary", "color": "color.onPrimary" },
      "secondary": { "background": "color.surfaceVariant", "color": "color.onSurface" },
      "tertiary": { "background": "color.surface", "color": "color.onSurface" }
    },

    "fontFamily": {
      "base": "Nunito, 'Comic Sans MS', system-ui, sans-serif",
      "sans": "Nunito, 'Comic Sans MS', system-ui, sans-serif",
      "heading": "Fredoka One, Nunito, system-ui, sans-serif",
      "mono": "'Comic Sans MS', ui-monospace, monospace"
    },

    "transition": {
      "fast": "150ms ease",
      "base": "200ms ease",
      "slow": "300ms ease",
      "none": "none"
    },

    "transform": {
      "hoverLift": "translateY(-1px)"
    }
  }
  
  
  