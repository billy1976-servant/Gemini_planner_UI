{
    "color": {
      "surface": "#FFF8FB",
      "surfaceVariant": "#FFE3F1",
      "primary": "#EC407A",
      "primaryVariant": "#D81B60",
      "onPrimary": "#FFFFFF",
      "onSurface": "#2B1B23",
      "outline": "#F48FB1",
      "secondary": "#7E57C2",
      "error": "#E53935",
      "errorContainer": "#FFCDD2",
      "onErrorContainer": "#5D0000"
    },
  
  
    "radius": {
      "none": 0,
      "sm": 8,
      "md": 14,
      "lg": 24,
      "xl": 36
    },
  
  
    "padding": {
      "none": 0,
      "xs": 6,
      "sm": 12,
      "md": 20,
      "lg": 32
    },
  
  
    "gap": {
      "xs": 6,
      "sm": 12,
      "md": 20,
      "lg": 32
    },
  
  
    "textSize": {
      "xs": 13,
      "sm": 15,
      "md": 17,
      "lg": 22,
      "xl": 28
    },
  
  
    "textWeight": {
      "regular": 400,
      "medium": 600,
      "bold": 800
    },
  
  
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.45,
      "relaxed": 1.65
    },
  
  
    "letterSpacing": {
      "tight": -0.1,
      "normal": 0.2,
      "loose": 0.8
    },
  
  
    "shadow": {
      "none": "none",
      "sm": "0px 2px 4px rgba(0,0,0,0.12)",
      "md": "0px 4px 10px rgba(0,0,0,0.18)",
      "lg": "0px 8px 20px rgba(0,0,0,0.25)"
    },
  
  
    "opacity": {
      "full": 1.0,
      "dim": 0.92,
      "low": 0.8
    },
  
  
    "borderWidth": {
      "none": 0,
      "sm": 1,
      "md": 2
    },
  
  
    "size": {
      "xs": 24,
      "sm": 36,
      "md": 52,
      "lg": 72
    },

    "textRole": {
      "display": { "size": "textSize.xl", "weight": "textWeight.bold", "lineHeight": "lineHeight.tight" },
      "headline": { "size": "textSize.lg", "weight": "textWeight.bold", "lineHeight": "lineHeight.tight" },
      "title": { "size": "textSize.md", "weight": "textWeight.medium", "lineHeight": "lineHeight.normal" },
      "body": { "size": "textSize.md", "weight": "textWeight.regular", "lineHeight": "lineHeight.normal" },
      "label": { "size": "textSize.sm", "weight": "textWeight.medium", "lineHeight": "lineHeight.normal" },
      "caption": { "size": "textSize.xs", "weight": "textWeight.regular", "lineHeight": "lineHeight.normal" }
    },

    "surfaceTier": {
      "base": { "background": "color.surface", "shadow": "shadow.none" },
      "raised": { "background": "color.surface", "shadow": "shadow.sm" },
      "overlay": { "background": "color.surface", "shadow": "shadow.md" },
      "floating": { "background": "color.surface", "shadow": "shadow.lg" }
    },

    "elevation": {
      "0": "none",
      "1": "0px 2px 4px rgba(0,0,0,0.12)",
      "2": "0px 4px 10px rgba(0,0,0,0.18)",
      "3": "0px 8px 20px rgba(0,0,0,0.25)",
      "4": "0px 12px 28px rgba(0,0,0,0.3)"
    },

    "prominence": {
      "primary": { "background": "color.primary", "color": "color.onPrimary" },
      "secondary": { "background": "color.surfaceVariant", "color": "color.onSurface" },
      "tertiary": { "background": "color.surface", "color": "color.onSurface" }
    },

    "fontFamily": {
      "base": "system-ui, -apple-system, sans-serif",
      "sans": "system-ui, -apple-system, sans-serif",
      "heading": "system-ui, -apple-system, sans-serif",
      "mono": "ui-monospace, monospace"
    },

    "transition": {
      "fast": "150ms ease",
      "base": "200ms ease",
      "slow": "300ms ease",
      "none": "none"
    },

    "transform": {
      "hoverLift": "translateY(-1px)"
    }
  }
  
  
  