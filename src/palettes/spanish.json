{
  "color": {
    "surface": "#FFFDF9",
    "surfaceVariant": "#F5EFE7",
    "primary": "#C62828",
    "primaryVariant": "#8E0000",
    "onPrimary": "#FFFFFF",
    "onSurface": "#2A1F1A",
    "outline": "#D6C8B8",
    "secondary": "#F57C00",
    "error": "#B00020",
    "errorContainer": "#F8D7DA",
    "onErrorContainer": "#3B0008"
  },


  "radius": {
    "none": 0,
    "sm": 4,
    "md": 8,
    "lg": 14,
    "xl": 22
  },


  "padding": {
    "none": 0,
    "xs": 8,
    "sm": 12,
    "md": 18,
    "lg": 28,
    "xl": 36,
    "2xl": 44
  },


  "gap": {
    "xs": 8,
    "sm": 12,
    "md": 18,
    "lg": 28,
    "xl": 36,
    "2xl": 44
  },


  "textSize": {
    "xs": 14,
    "sm": 16,
    "md": 19,
    "lg": 24,
    "xl": 32
  },


  "textWeight": {
    "regular": 400,
    "medium": 600,
    "bold": 800
  },


  "lineHeight": {
    "tight": 1.25,
    "normal": 1.55,
    "relaxed": 1.75
  },


  "letterSpacing": {
    "tight": -0.15,
    "normal": 0.1,
    "loose": 0.5
  },


  "shadow": {
    "none": "none",
    "sm": "0px 2px 4px rgba(0,0,0,0.14)",
    "md": "0px 4px 10px rgba(0,0,0,0.2)",
    "lg": "0px 8px 18px rgba(0,0,0,0.26)"
  },


  "opacity": {
    "full": 1.0,
    "dim": 0.93,
    "low": 0.82
  },


  "borderWidth": {
    "none": 0,
    "sm": 1,
    "md": 2
  },


  "size": {
    "xs": 22,
    "sm": 36,
    "md": 52,
    "lg": 72
  },

  "textRole": {
    "display": { "size": "textSize.xl", "weight": "textWeight.bold", "lineHeight": "lineHeight.tight" },
    "headline": { "size": "textSize.lg", "weight": "textWeight.bold", "lineHeight": "lineHeight.tight" },
    "title": { "size": "textSize.md", "weight": "textWeight.medium", "lineHeight": "lineHeight.normal" },
    "body": { "size": "textSize.md", "weight": "textWeight.regular", "lineHeight": "lineHeight.normal" },
    "label": { "size": "textSize.sm", "weight": "textWeight.medium", "lineHeight": "lineHeight.normal" },
    "caption": { "size": "textSize.xs", "weight": "textWeight.regular", "lineHeight": "lineHeight.normal" }
  },

  "surfaceTier": {
    "base": { "background": "color.surface", "shadow": "shadow.none" },
    "raised": { "background": "color.surface", "shadow": "shadow.sm" },
    "overlay": { "background": "color.surface", "shadow": "shadow.md" },
    "floating": { "background": "color.surface", "shadow": "shadow.lg" }
  },

  "elevation": {
    "0": "none",
    "1": "0px 2px 4px rgba(0,0,0,0.14)",
    "2": "0px 4px 10px rgba(0,0,0,0.2)",
    "3": "0px 8px 18px rgba(0,0,0,0.26)",
    "4": "0px 12px 24px rgba(0,0,0,0.32)"
  },

  "prominence": {
    "primary": { "background": "color.primary", "color": "color.onPrimary" },
    "secondary": { "background": "color.surfaceVariant", "color": "color.onSurface" },
    "tertiary": { "background": "color.surface", "color": "color.onSurface" }
  },

  "fontFamily": {
    "base": "Raleway, 'Helvetica Neue', system-ui, sans-serif",
    "sans": "Raleway, 'Helvetica Neue', system-ui, sans-serif",
    "heading": "Montserrat, Raleway, system-ui, sans-serif",
    "mono": "'Fira Code', ui-monospace, monospace"
  },

  "transition": {
    "fast": "150ms ease",
    "base": "200ms ease",
    "slow": "300ms ease",
    "none": "none"
  },

  "transform": {
    "hoverLift": "translateY(-1px)"
  }
}


