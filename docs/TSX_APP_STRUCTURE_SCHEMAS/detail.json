{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tsx-structure-detail",
  "title": "Detail Structure Config",
  "description": "Config for Master-Detail structure: list + detail panel, split ratio, selection sync",
  "type": "object",
  "properties": {
    "split": {
      "type": "object",
      "properties": {
        "orientation": { "type": "string", "enum": ["horizontal", "vertical"], "default": "horizontal" },
        "masterRatio": { "type": "number", "minimum": 0.1, "maximum": 0.9, "default": 0.35 },
        "resizable": { "type": "boolean", "default": true },
        "minMaster": { "type": "integer", "minimum": 100 },
        "minDetail": { "type": "integer", "minimum": 200 }
      }
    },
    "master": {
      "type": "object",
      "properties": {
        "position": { "type": "string", "enum": ["left", "right", "top", "bottom"], "default": "left" },
        "listDensity": { "type": "string", "enum": ["compact", "default", "spacious"], "default": "default" }
      }
    },
    "detail": {
      "type": "object",
      "properties": {
        "emptyState": { "type": "string", "description": "Placeholder when nothing selected" },
        "persistSelection": { "type": "boolean", "default": true }
      }
    }
  },
  "additionalProperties": false
}
